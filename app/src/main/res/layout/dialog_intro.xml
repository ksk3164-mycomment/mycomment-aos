<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gyeonggi_batang_b"
        android:padding="16dp"
        android:text="소개글 작성하기"

        android:textAlignment="center"
        android:textColor="@color/colorTextTitle"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/titleField"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_input_dialog"
        android:fontFamily="@font/gyeonggi_batang_r"
        android:gravity="top"
        android:hint="소개글을 작성해보세요!"
        android:inputType="textCapSentences|textMultiLine"
        android:lineSpacingMultiplier="1.5"
        android:maxLength="2000"
        android:maxLines="4"
        android:padding="6dp"
        android:scrollHorizontally="false"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_dialog_button_disable"
        android:clickable="true"

        android:fontFamily="@font/gyeonggi_batang_b"
        android:gravity="center"
        android:text="확인"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="15sp" />

</LinearLayout>
