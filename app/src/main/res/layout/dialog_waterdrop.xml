<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="284dp"
    android:layout_height="244dp"
    android:background="@drawable/waterdrop"
    android:visibility="visible">

    <TextView
        android:id="@+id/btnConfirm"
        android:layout_width="70dp"
        android:layout_height="31dp"
        android:layout_marginTop="30dp"

        android:background="@drawable/radius"
        android:clickable="true"
        android:fontFamily="@font/gyeonggi_batang_b"
        android:gravity="center"
        android:text="확인"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/btn_alarm_setting"
        android:layout_width="103dp"
        android:layout_height="31dp"

        android:layout_marginTop="13dp"
        android:background="@drawable/radius"
        android:clickable="true"
        android:fontFamily="@font/gyeonggi_batang_b"
        android:gravity="center"
        android:text="알림 설정 켜기"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_alarm_setting" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:fontFamily="@font/gyeonggi_batang_b"
        android:gravity="center_horizontal"
        android:text="드라마"
        android:textColor="@color/colorTextTitle"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/gyeonggi_batang_r"
        android:text="드라마를 즐겨보시는군요!"
        android:textColor="@color/colorTextTitle"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/gyeonggi_batang_b"
        android:gravity="center_horizontal"
        android:inputType="textMultiLine"
        android:lines="2"
        android:maxLines="2"
        android:singleLine="false"
        android:text="드라마 시작 시간에 맞춰서\n매주 알림을 보내드릴게요:)"
        android:textColor="@color/colorTextTitle"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/tv_alarm_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/gyeonggi_batang_b"
        android:text="엇?! 알림이 꺼져있네요!"
        android:textColor="#D93200"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />
</androidx.constraintlayout.widget.ConstraintLayout>